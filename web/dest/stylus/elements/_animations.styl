@keyframes left-to-right
	0%
		transform scaleX(0)
	50%
		transform scaleX(.5)
	100%
		transform scaleX(1)
		
@keyframes translate
	0%
		transform translateX(0)
	100%
		transform translateX(-1000px)
		
@keyframes translate-bis
	0%
		transform translateX(1000px) translateY(-50%)
	100%
		transform translateX(0px) translateY(-50%)
		
@keyframes translate-rotate
	0%
		transform translateY(1200px) translateX(0px) rotate(-90deg) 
	50%
		transform translateY(300px) translateX(0px) rotate(-90deg) 
	100%
		transform translateY(90px) translateX(0px) rotate(-90deg) 
		
@keyframes opacity
	0%
		opacity 0
	50%
		opacity 0
	100%
		opacity 1

