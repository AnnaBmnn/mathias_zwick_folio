.full-width
	width 100%
	height 100%
	
.overflow-hidden
	overflow hidden
	
.overflow-scroll-x
	overflow-x hidden 
	overflow-y scroll

.serif
	font-family 'Playfair Display', serif
	
.sans-serif
	font-family 'Poppins', sans-serif
	
.uppercase
	text-transform uppercase
	
.vertical 
	transform rotate(-90deg)
	
.hover-underline
	&:hover
		position relative
					
		&:before
			animation left-to-right .3s cubic-bezier(0.5,0.5,0.5,0.5)
			transform scaleX(1)
			z-index -1
			content ""
			position absolute
			left 0
			top 50%
			width 100%
			height 50%
			background-color blue
			transform-origin left
			
.transition
	animation opacity 0.6s  cubic-bezier(0.390, 0.500, 0.150, 1.360)

		
 